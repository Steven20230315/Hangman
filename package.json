{
	"name": "hangman",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "server.ts",
	"scripts": {
		"build": "rimraf dist && npx tsc",
		"prestart": "npm run build",
		"start": "node dist/server.js",
		"preserver": "npm run build",
		"server": "concurrently \"npx tsc -w\" \"nodemon dist/server.js --watch dist --watch src\"",
		"client": "cd client && npm run dev",
		"dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"concurrently": "^8.2.2",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.1",
		"mongodb": "^6.5.0",
		"rimraf": "^5.0.5"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.30",
		"nodemon": "^3.1.0",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.4.3"
	}
}
